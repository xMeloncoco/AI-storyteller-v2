# Dreamwalkers Environment Configuration
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=sqlite:///./data/dreamwalkers.db

# ChromaDB Path for Vector Memory
CHROMA_PATH=./data/chroma

# AI Provider Configuration
# Options: openrouter, nebius, local
AI_PROVIDER=openrouter

# OpenRouter Configuration (if using openrouter)
OPENROUTER_API_KEY=your_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Model Configuration
# Small model for quick analysis (character decisions, event detection)
SMALL_MODEL=meta-llama/llama-3.2-3b-instruct
# Large model for story generation
LARGE_MODEL=meta-llama/llama-3.1-8b-instruct

# Alternative: Local Ollama Configuration
# OLLAMA_HOST=http://localhost:11434
# SMALL_MODEL=phi3:mini
# LARGE_MODEL=llama3.1:8b-instruct-q4_0

# Application Settings
LOG_LEVEL=INFO
MAX_CONTEXT_MESSAGES=20
MEMORY_SAVE_INTERVAL=5
